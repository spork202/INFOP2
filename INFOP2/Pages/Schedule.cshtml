@page
@model INFOP2.Pages.Schedule
@{
    ViewData["Title"] = "Schedule";
    Layout = "_Layout";
}
    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <h2 class="fw-bold">@ViewData["Title"]</h2>
                <h4 class="h6">Hello, <strong>@User.Identity?.Name</strong></h4>
            </div>
            <div class="col-12 d-flex justify-content-between align-items-center">
                <p class="text-muted">Manage your schedules</p>
            </div>
        </div>

        <!-- Success Card -->
        <div id="success-card" class="card border-success shadow-sm mb-4 d-none">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title text-success mb-1">Success!</h5>
                    <p class="card-text">Transport event added successfully!</p>
                </div>
                <button type="button" class="btn-close" aria-label="Close" onclick="$('#success-card').addClass('d-none');"></button>
            </div>
        </div>

        <!-- Toolbar -->
        <div class="d-flex justify-content-end mb-3 gap-2">
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addDriverModal">
                <i class="fa fa-plus me-1"></i>Add Driver
            </button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEventModal">
                <i class="fa fa-calendar-plus me-1"></i>Create Event
            </button>
        </div>

        <!-- Transport Events Container -->
        <div id="events-container">
            <!-- Sample Transport Event Card -->
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center bd-unset">
                    <div>
                        <strong>Subject:</strong> Sunday Worship<br />
                        <strong>Note:</strong> Meet at 7:30 AM<br />
                        <strong>Driver:</strong> John Doe<br />
                        <strong>Passengers:</strong> Anna, Ben, Clara
                    </div>
                    <button class="btn btn-sm btn-warning" disabled title="Sample card, editing disabled">
                        <i class="fa fa-edit"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="mb-2"><strong>Remarks:</strong> Arrived on time</div>
                    <div class="mb-2"><strong>Closing Notes:</strong> Great service!</div>
                    <div><strong>Bible Verse:</strong> <em>For God so loved the world that he gave his one and only Son... — John 3:16</em></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal: Add Driver -->
    <div class="modal fade" id="addDriverModal" tabindex="-1" aria-labelledby="addDriverModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Add New Driver</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="add-driver-form">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Driver Name</label>
                            <input type="text" class="form-control" id="add-driver-name" placeholder="Enter driver name" required />
                            <span class="text-danger" id="add-driver-name-error"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contact Number</label>
                            <input type="text" class="form-control" id="add-driver-contact" placeholder="+966 5xx xxx xxx" />
                            <span class="text-danger" id="add-driver-contact-error"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bible Verse</label>
                            <textarea class="form-control" id="add-driver-verse" rows="3" placeholder="Enter a Bible verse (e.g., For God so loved the world... — John 3:16)"></textarea>
                            <span class="text-danger" id="add-driver-verse-error"></span>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Add Driver</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal: Edit Driver -->
    <div class="modal fade" id="editDriverModal" tabindex="-1" aria-labelledby="editDriverModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Edit Driver</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="edit-driver-form">
                    <div class="modal-body">
                        <input type="hidden" id="edit-driver-id" />
                        <div class="mb-3">
                            <label class="form-label">Driver Name</label>
                            <input type="text" class="form-control" id="edit-driver-name" required />
                            <span class="text-danger" id="edit-driver-name-error"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contact Number</label>
                            <input type="text" class="form-control" id="edit-driver-contact" />
                            <span class="text-danger" id="edit-driver-contact-error"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bible Verse</label>
                            <textarea class="form-control" id="edit-driver-verse" rows="3" placeholder="Enter a Bible verse (e.g., For God so loved the world... — John 3:16)"></textarea>
                            <span class="text-danger" id="edit-driver-verse-error"></span>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal: Add Transport Event -->
    <div class="modal fade" id="addEventModal" tabindex="-1" aria-labelledby="addEventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">Add Transport Event</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="add-event-form">
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Subject</label>
                                <input type="text" class="form-control" id="add-event-subject" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Note</label>
                                <input type="text" class="form-control" id="add-event-note" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Driver</label>
                                <select class="form-select" id="add-event-driver" required>
                                    <option value="" selected disabled>Select driver</option>
                                    <!-- Populated dynamically -->
                                </select>
                                <span class="text-danger" id="add-event-driver-error"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Passengers</label>
                                <select class="form-select" id="add-event-passengers" multiple>
                                    <!-- Populated dynamically -->
                                </select>
                                <small class="text-muted">Hold Ctrl (Cmd on Mac) to select multiple</small>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Remarks</label>
                                <textarea class="form-control" id="add-event-remarks" rows="2"></textarea>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Closing Notes</label>
                                <textarea class="form-control" id="add-event-closing-notes" rows="2"></textarea>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Bible Verse</label>
                                <textarea class="form-control" id="add-event-verse" rows="3" placeholder="Enter a Bible verse (e.g., For God so loved the world... — John 3:16)"></textarea>
                                <span class="text-danger" id="add-event-verse-error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-dark">Create Event</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- Firebase SDK -->
<script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore-compat.js"></script>
<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Custom Script -->
<script src="js/transport-list.js" asp-append-version="true"></script>