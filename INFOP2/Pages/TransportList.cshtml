@page
@model INFOP2.Pages.TransportList
@{
    ViewData["Title"] = "Transport List";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="fw-bold">@ViewData["Title"]</h2>
            <h4 class="h6">Hello, <strong>@User.Identity?.Name</strong></h4>
        </div>
        <div class="col-12 d-flex justify-content-between align-items-center">
            <p class="text-muted">Manage transportation details</p>
        </div>
    </div>

    <!-- Success Card -->
    <div id="success-card" class="card border-success shadow-sm mb-4 d-none">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title text-success mb-1">Success!</h5>
                <p class="card-text" id="success-message">Action completed successfully!</p>
            </div>
            <button type="button" class="btn-close" aria-label="Close" onclick="$('#success-card').addClass('d-none');"></button>
        </div>
    </div>

    <!-- Toolbar -->
    <div class="d-flex justify-content-end mb-3 gap-2">
        <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addDriverModal">
            <i class="fa fa-plus me-1"></i>Add Driver
        </button>
        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addEventModal">
            <i class="fa fa-calendar-plus me-1"></i>Create Event
        </button>
    </div>

    <!-- Transport Events Container -->
    <div id="events-container">
        <!-- Dynamically populated by JavaScript -->
    </div>
</div>

<!-- Modal: Add Driver -->
<div class="modal fade" id="addDriverModal" tabindex="-1" aria-labelledby="addDriverModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Add New Driver</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="add-driver-form">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Driver Name</label>
                        <input type="text" class="form-control" id="add-driver-name" placeholder="Enter driver name" required />
                        <span class="text-danger" id="add-driver-name-error"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contact Number</label>
                        <input type="text" class="form-control" id="add-driver-contact" placeholder="+966 5xx xxx xxx" />
                        <span class="text-danger" id="add-driver-contact-error"></span>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Add Driver</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal: Edit Driver -->
<div class="modal fade" id="editDriverModal" tabindex="-1" aria-labelledby="editDriverModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Edit Driver</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="edit-driver-form">
                <div class="modal-body">
                    <input type="hidden" id="edit-driver-id" />
                    <div class="mb-3">
                        <label class="form-label">Driver Name</label>
                        <input type="text" class="form-control" id="edit-driver-name" required />
                        <span class="text-danger" id="edit-driver-name-error"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contact Number</label>
                        <input type="text" class="form-control" id="edit-driver-contact" />
                        <span class="text-danger" id="edit-driver-contact-error"></span>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal: Add Transport Event -->
<div class="modal fade" id="addEventModal" tabindex="-1" aria-labelledby="addEventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Add Transport Event</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="add-event-form">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Subject</label>
                            <input type="text" class="form-control" id="add-event-subject" required />
                            <span class="text-danger" id="add-event-subject-error"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" id="add-event-date" required />
                            <span class="text-danger" id="add-event-date-error"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Note</label>
                            <input type="text" class="form-control" id="add-event-note" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Driver</label>
                            <select class="form-select" id="add-event-driver" required>
                                <option value="" selected disabled>Select driver</option>
                                <!-- Populated dynamically -->
                            </select>
                            <span class="text-danger" id="add-event-driver-error"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Passengers</label>
                            <select class="form-select" id="add-event-passengers" multiple>
                                <!-- Populated dynamically from people collection -->
                            </select>
                            <small class="text-muted">Hold Ctrl (Cmd on Mac) to select multiple</small>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Remarks</label>
                            <textarea class="form-control" id="add-event-remarks" rows="2"></textarea>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Closing Notes</label>
                            <textarea class="form-control" id="add-event-closing-notes" rows="2"></textarea>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Bible Verse</label>
                            <textarea class="form-control" id="add-event-verse" rows="3" placeholder="Enter a Bible verse (e.g., For God so loved the world... â€” John 3:16)"></textarea>
                            <span class="text-danger" id="add-event-verse-error"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-dark">Create Event</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal: Edit Transport Event -->
