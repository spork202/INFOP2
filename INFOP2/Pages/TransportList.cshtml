    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Edit Transport Event</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="edit-event-form">
                <div class="modal-body">
                    <input type="hidden" id="edit-event-id" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Subject</label>
                            <input type="text" class="form-control" id="edit-event-subject" required />
                            <span class="text-danger" id="edit-event-subject-error"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" id="edit-event-date" required />
                            <span class="text-danger" id="edit-event-date-error"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Note</label>
                            <input type="text" class="form-control" id="edit-event-note" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Driver</label>
                            <select class="form-select" id="edit-event-driver" required>
                                <option value="" selected disabled>Select driver</option>
                                <!-- Populated dynamically -->
                            </select>
                            <span class="text-danger" id="edit-event-driver-error"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Passengers</label>
                            <select class="form-select" id="edit-event-passengers" multiple>
