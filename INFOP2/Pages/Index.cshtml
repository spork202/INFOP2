@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout"; // Use layout with side menu
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h3 class="display-5">@ViewData["Title"]</h3>
            <h4 class="h6">Hello, <strong>@User.Identity.Name</strong></h4>
        </div>
    </div>
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4" style="height: 150px;">
                <div class="card-body text-start">
                    <h5 class="card-title fw-bold">Masterlist</h5>
                    <p class="display-6 mb-0">100</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4" style="height: 150px;">
                <div class="card-body text-start">
                    <h5 class="card-title fw-bold">Assetlist</h5>
                    <p class="display-6 mb-0">40</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4" style="height: 150px;">
                <div class="card-body text-start">
                    <h5 class="card-title fw-bold">Finance</h5>
                    <p class="display-6 mb-0">$10,000</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-start">
                    <h5 class="card-title fw-bold">Transport List</h5>
                    <div class="table-responsive">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th>Driver</th>
                                    <th>Members</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>John Doe</td>
                                    <td>Jane Doe, Alex Smith, Maria Lopez</td>
                                </tr>
                                <tr>
                                    <td>Chris Johnson</td>
                                    <td>Emma Brown, Bob McPlaceholder</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-start">
                    <h5 class="card-title fw-bold">Prayer Ministry</h5>
                    <div class="table-responsive">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Prayer for Thanksgiving</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>Thank you for this April</td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-start">
                <h5 class="card-title fw-bold">Schedules</h5>
                <div class="table-responsive">
                    <table class="table mt-3 align-middle">
                    <thead>
                        <tr>
                        <th>Event</th>
                        <th>Details</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                        <td>Sunday Worship</td>
                        <td>
                            <div class="d-flex flex-column">
                            <div class="d-flex justify-content-between">
                                <span>Welcome & Opening Prayer</span>
                                <span class="text-muted">Music Ministry</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Praise & Worship</span>
                                <span class="text-muted">Pastor Mike Sample</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Offering/Giving</span>
                                <span class="text-muted">Jane Random</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Special Numbers/Announcements</span>
                                <span class="text-muted">John Random</span>
                            </div>
                            </div>
                        </td>
                        <td>
                            <div>April 13, 2025</div>
                            <div>10:00 AM</div>
                        </td>
                        <td>
                            <span class="badge bg-success-subtle text-success fw-semibold rounded-pill px-3 py-2">Upcoming</span>
                        </td>
                        </tr>
                        <tr>
                        <td>Sunday Worship</td>
                        <td>
                            <div class="d-flex flex-column">
                            <div class="d-flex justify-content-between">
                                <span>Welcome & Opening Prayer</span>
                                <span class="text-muted">Music Ministry</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Praise & Worship</span>
                                <span class="text-muted">Pastor Whisker McNom</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Offering/Giving</span>
                                <span class="text-muted">Chris Wilson</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Special Numbers/Announcements</span>
                                <span class="text-muted">Anna Miller</span>
                            </div>
                            </div>
                        </td>
                        <td>
                            <div>April 20, 2025</div>
                            <div>10:00 AM</div>
                        </td>
                        <td>
                            <span class="badge bg-danger-subtle text-danger fw-semibold rounded-pill px-3 py-2">Ended</span>
                        </td>
                        </tr>
                    </tbody>
                    </table>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>