@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>

<body>
    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <h3 class="display-5">Dashboard</h3>
                <h4 class="h6">Hello, <strong>World</strong></h4>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card shadow-sm border-0 rounded-4" style="height: 150px;">
                    <div class="card-body text-start">
                        <h5 class="card-title fw-bold">Masterlist</h5>
                        <p class="display-6 mb-0">100</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0 rounded-4" style="height: 150px;">
                    <div class="card-body text-start">
                        <h5 class="card-title fw-bold">Assetlist</h5>
                        <p class="display-6 mb-0">40</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-4" style="height: 150px;">
                    <div class="card-body text-start">
                        <h5 class="card-title fw-bold">Finance</h5>
                        <p class="display-6 mb-0">$10,000</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body text-start">
                        <h5 class="card-title fw-bold">Transport List</h5>
                        <div class="table-responsive">
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th>Driver</th>
                                        <th>Members</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>John Doe</td>
                                        <td>Jane Doe, Alex Smith, Maria Lopez</td>
                                    </tr>
                                    <tr>
                                        <td>Chris Johnson</td>
                                        <td>Emma Brown, Bob McPlaceholder</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
           <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body text-start">
                        <h5 class="card-title fw-bold">Prayer Ministry</h5>
                        <div class="table-responsive">
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Prayer for Thanksgiving</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Thank you for this april</td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card shadow-sm border-0 rounded-4" style="height: 100px;">
                    <div class="card-body text-start">
                        <h5 class="card-title fw-bold">Schedules</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
